<?xml version="1.0"?>
<openerp>
    <data>


        <!-- Add colory to the company form -->
        <record id="view_company_form_city" model="ir.ui.view">
            <field name="name">res.company.form.colory</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <field name="rml_footer_readonly" position="after">
                    <field name="color" widget="color"/>
                    <field name="view_theme_id" class="oe_inline"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
